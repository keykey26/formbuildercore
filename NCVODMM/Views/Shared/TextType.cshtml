	<label for="@Model.Value" class="control-label">@Model.Label</label>
	@Html.TextBoxFor(m => m.Value)
	@*<input type="text" name="@Model.Value" id="@Model.Value" placeholder="@Model.Placeholder" />*@
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
